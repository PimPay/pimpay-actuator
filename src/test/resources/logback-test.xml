<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- PROPERTIES -->
    <property name="layout" value="%d{HH:mm:ss.SSS} %-5level [%thread][%logger{0}] %m%n" />
    <property name="logFile" value="pimpay-test" />

    <!-- APPENDERS -->
    <appender name="APP_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logFile}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logFile}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${layout}</pattern>
        </encoder>
    </appender>

    <appender name="APP_LOG_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${layout}</pattern>
        </encoder>
    </appender>

    <!-- LOGGERS -->
    <logger name="com.codenotfound.soap.http.cxf" level="DEBUG" />

    <logger name="org.springframework" level="WARN" />
    <logger name="org.apache.cxf" level="INFO" />

    <!-- LOG LEVEL -->
    <root level="WARN">
        <appender-ref ref="APP_LOG_FILE" />
        <appender-ref ref="APP_LOG_STDOUT" />
    </root>

</configuration>
